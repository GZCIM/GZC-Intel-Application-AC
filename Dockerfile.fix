FROM nginx:alpine

# Copy frontend build
COPY Main_Frontend/dist /usr/share/nginx/html

# Fix nginx config - use nginx user, not www-data
RUN sed -i 's/user  nginx;/user nginx;/g' /etc/nginx/nginx.conf || true

# Copy fixed nginx config
COPY nginx-config/nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]